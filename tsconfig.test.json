{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./test-lib",
    "module": "ESNext",
    "target": "es2022",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "./node_modules/",
    "./lib/",
    "./test-lib/"
  ]
}