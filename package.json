{
  "name": "bkper",
  "version": "1.0.0",
  "description": "Node.js client for Bkper REST API",
  "main": "lib/index.js",
  "types": "lib",
  "files": [
    "lib/**/*"
  ],
  "repository": "https://github.com/bkper/bkper-node.git",
  "author": "mael <mael@bkper.com>",
  "license": "Apache-2.0",
  "private": false,
  "scripts": {
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"rootDir\": \".\" }' mocha -r ts-node/register 'test/**/*.ts'",
    "clean": "gts clean",
    "build": "run-s build:*",
    "build:clean": "yarn clean",
    "build:test": "yarn test",
    "build:compile": "tsc",
    "build:api": "api-extractor run --local",
    "build:cleanup": "rimraf 'lib/!(*.js)'",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@bkper/bkper-api-types": "^3.7.1",
    "@google-cloud/local-auth": "^1.0.0",
    "commander": "^6.2.1",
    "gaxios": "^4.1.0",
    "google-auth-library": "^6.1.4",
    "moment-timezone": "^0.5.32",
    "open": "^7.3.1",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.12.1",
    "@types/chai": "^4.2.14",
    "@types/commander": "^2.12.2",
    "@types/mocha": "^8.2.0",
    "@types/moment-timezone": "^0.5.30",
    "@types/node": "^14.14.20",
    "chai": "^4.2.0",
    "gts": "^3.0.3",
    "mocha": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
